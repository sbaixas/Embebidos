<br>
<h1 class="text-center">Estados</h1>
<br>
<div class="table-responsive">
  <table class="table table-sm table-striped">
    <thead>
      <tr>
        <th>#</th>
        <th>Temperatura (Â°C)</th>
        <th>Humedad (%)</th>
        <th>Calidad de Aire</th>
        <th>Humo (%)</th>
        <th>RGB 1</th>
        <th>RGB 2</th>
        <th>Contador</th>
        <th>Stepper 1</th>
        <th>Stepper 2</th>
        <th>Servo 1</th>
        <th>Servo 2</th>
        <th>Servo 3</th>
        <th>Recibido (A-m-d H:M)</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @states.each do |state| %>
        <tr>
          <td><%= state.id %></td>
          <td><%= state.temp %></td>
          <td><%= state.hum %></td>
          <td><%= state.air %></td>
          <td><%= state.smk %></td>
          <td><%= state.rgb1 %></td>
          <td><%= state.rbg2 %></td>
          <td><%= state.c %></td>
          <td><%= state.st1 %></td>
          <td><%= state.st2 %></td>
          <td><%= state.s1 %></td>
          <td><%= state.s2 %></td>
          <td><%= state.s3 %></td>
          <td><%= state.created_at.localtime.strftime("%Y-%m-%d %H:%M") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
<div class="text-center">
  <%= link_to 'Eliminar datos', remove_all_states_path, method: :get, class: 'btn btn-danger'%>
</div>
